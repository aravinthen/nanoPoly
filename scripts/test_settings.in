variable structure index test_structure.in                                             
variable simulation index test_settings.in                                            
                                                                                      
# Initialization settings                                                             
units              lj                                                                 
boundary           p p p                                                              
atom_style         bond                                                       
log                log.${simulation}.txt                                            
                                                                                      
# read data from object into file                                                     
read_data          ${structure} extra/special/per/atom 100 extra/bond/per/atom 100  

# define interactions                                                                 
neighbor      0.4 multi                                                               
neigh_modify  every 10 one 10000                                                      
pair_style    lj/cut 1                                                         
pair_coeff    1 1 2 0.2                                  
pair_style    lj/cut 2                                                         
pair_coeff    1 2 4 0.3                                  
pair_style    lj/cut 3                                                         
pair_coeff    1 3 4 0.2                                  
pair_style    lj/cut 2                                                         
pair_coeff    1 4 4 0.1                                  
pair_style    lj/cut 2                                                         
pair_coeff    1 5 4 0.1                                  
pair_style    lj/cut 1                                                         
pair_coeff    2 2 3 0.3                                  
pair_style    lj/cut 2                                                         
pair_coeff    2 3 4 0.2                                  
pair_style    lj/cut 2                                                         
pair_coeff    2 4 4 0.15                                  
pair_style    lj/cut 2                                                         
pair_coeff    2 5 4 0.15                                  
pair_style    lj/cut 1                                                         
pair_coeff    3 3 3 0.3                                  
pair_style    lj/cut 2                                                         
pair_coeff    3 4 4 0.25                                  
pair_style    lj/cut 2                                                         
pair_coeff    3 5 4 0.25                                  
pair_style    lj/cut 1                                                         
pair_coeff    4 4 3 0.24                                  
pair_style    lj/cut 2                                                         
pair_coeff    4 5 4 0.15                                  
pair_style    lj/cut 1                                                         
pair_coeff    5 5 3 0.14                                  

bond_style    fene  
special_bonds fene  
bond_coeff    1 33.0 3.85 0.055 0.33 
bond_coeff    2 30.0 3.5 0.05 0.3 
bond_coeff    3 27.0 3.5 0.05 0.3 

#---------------------------------------------------------------------------------------------------
# EQUILIBRATION STAGE 1                                                                 
# Description: {description}
#---------------------------------------------------------------------------------------------------
velocity        all create 2.0 1231 
fix             1 all nve/limit 3
fix             2 all langevin 2.0 2.0 10.0 97317
fix             3 all bond/create 1 4 1 0.33 1 prob 1.0 97317 iparam 2 4 jparam 3 1
fix             4 all bond/create 1 4 2 0.33 1 prob 1.0 97317 iparam 2 4 jparam 3 2
thermo_style    custom step temp press 
thermo          1000
reset_timestep  0
run             10000 
unfix 1         
unfix 2         
unfix 3 
unfix 4 
unfix 5 
unfix 6 
write_restart   restart.test_settings.in.polylattice1
